{% extends 'base.html.twig' %}

{% block title %}Nos Produits
{% endblock %}

{% block body %}
	<h1>Nos Produits</h1>

	<div class="row">
		{% for product in products %}
			<div class="col-md-4">
				<div class="card">
					<img src="{{ product.image ?? '/images/default-product.jpg' }}" class="card-img-top" alt="{{ product.name }}">
					<div class="card-body">
						<h5 class="card-title">{{ product.name }}</h5>
						<p class="card-text">Prix :
							{{ product.price|number_format(2, ',', ' ') }}
							€</p>
						<a href="{{ path('cart_add', { id: product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	<div class="pagination">
		{% if page > 1 %}
			<a href="{{ path('product_list', { page: page - 1 }) }}" class="btn btn-secondary">Précédent</a>
		{% endif %}
		<a href="{{ path('product_list', { page: page + 1 }) }}" class="btn btn-secondary">Suivant</a>
	</div>
{% endblock %}
