{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset('uploads/products/' ~ product.image) }}" class="img-fluid" alt="{{ product.name }}">
        </div>
        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            <p class="text-success fs-4">{{ (product.price)|number_format(2, ',', ' ') }} €</p>
            <p>{{ product.description }}</p>
            <a href="{{ path('product_index') }}" class="btn btn-secondary">⬅️ Retour aux produits</a>
        </div>
    </div>
</div>
{% endblock %}
