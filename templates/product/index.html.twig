{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center mb-4">Nos Produits</h1>

		<form method="GET" action="{{ path('product_index') }}" class="d-flex mb-4">
			<input type="text" name="q" class="form-control me-2" placeholder="Rechercher un produit..." value="{{ app.request.get('q') }}">

			<select name="category" class="form-select me-2">
				<option value="">Toutes les cat√©gories</option>
				{% for category in categories %}
					<option value="{{ category.id }}" {% if app.request.get('category') == category.id %} selected {% endif %}>
						{{ category.name }}
					</option>
				{% endfor %}
			</select>

			<select name="sort" class="form-select me-2">
				<option value="">Trier par...</option>
				<option value="price_asc" {% if app.request.get('sort') == 'price_asc' %} selected {% endif %}>Prix croissant</option>
				<option value="price_desc" {% if app.request.get('sort') == 'price_desc' %} selected {% endif %}>Prix d√©croissant</option>
				<option value="newest" {% if app.request.get('sort') == 'newest' %} selected {% endif %}>Nouveaut√©s</option>
			</select>

			<button type="submit" class="btn btn-success">üîç Rechercher</button>
		</form>

		<div class="row">
			{% for product in products %}
				<div class="col-md-4 mb-4">
					<div class="card shadow-sm border-0">
						<img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top img-thumbnail" alt="{{ product.name }}" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#imageModal{{ product.id }}">

						<div class="card-body text-center">
							<h5 class="card-title">{{ product.name }}</h5>

							<p class="card-text font-weight-bold text-success">
								{% if product.isWeightBased and product.priceByWeight is not empty %}
									{% set firstWeight = product.priceByWeight|keys|first %}
									{{ product.calculateDiscountedPrice(firstWeight)|number_format(2, ',', ' ') }}
										‚Ç¨
								{% else %}
									{{ product.price|number_format(2, ',', ' ') }}
										‚Ç¨
								{% endif %}

							</p>

							<a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-light w-100 mb-2">Informations sur le produit</a>

							<form method="post" action="{{ path('cart_add', { id: product.id }) }}">
								{% if product.isWeightBased and product.getPriceByWeight() is not empty %}
									<div class="input-group mb-2">
										<span class="input-group-text">Poids :</span>
										<select name="selectedWeight" class="form-select" required>
											{% for weight, price in product.getPriceByWeight() %}
												<option value="{{ weight }}">{{ weight }}g -
													{{ price|number_format(2, ',', ' ') }}
													‚Ç¨</option>
											{% endfor %}
										</select>
									</div>
								{% else %}
									<div class="input-group mb-2">
										<span class="input-group-text">Quantit√© :</span>
										<input type="number" id="quantity_{{ product.id }}" name="quantity" value="1" min="1" max="{{ product.stock }}" class="form-control text-center">
									</div>
								{% endif %}
								<button type="submit" class="btn btn-primary w-100">üõí Ajouter au panier</button>
							</form>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12">
					<p class="text-center">Aucun produit trouv√©.</p>
				</div>
			{% endfor %}
		</div>

		{% set totalPages = totalPages ?? 1 %}

		{% if totalPages > 1 %}
			<div class="d-flex justify-content-center mt-4">
				{% if page > 1 %}
					<a href="{{ path('product_index', { page: page - 1 }) }}" class="btn btn-outline-primary mx-1">‚¨ÖÔ∏è Pr√©c√©dent</a>
				{% endif %}

				<span class="btn btn-light mx-1">Page
					{{ page }}
					/
					{{ totalPages }}</span>

				{% if page < totalPages %}
					<a href="{{ path('product_index', { page: page + 1 }) }}" class="btn btn-outline-primary mx-1">Suivant ‚û°Ô∏è</a>
				{% endif %}
			</div>
		{% endif %}
	</div>
{% endblock %}
