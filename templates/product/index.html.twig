{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="pagination text-center mt-4">
    {% if currentPage > 1 %}
        <a href="{{ path('product_index', { page: currentPage - 1 }) }}" class="btn btn-primary">⬅️ Précédent</a>
    {% endif %}

    <span class="btn btn-light">Page {{ currentPage }} / {{ totalPages }}</span>

    {% if currentPage < totalPages %}
        <a href="{{ path('product_index', { page: currentPage + 1 }) }}" class="btn btn-primary">Suivant ➡️</a>
    {% endif %}
</div>

{% endblock %}
