{% extends 'base.html.twig' %}

{% block title %}Mon Panier - Relax CBD Shop
{% endblock %}
{% block body_class %}page-cart
{% endblock %}

{% block body %}
	<div class="container table-container">
		<h1 class="section-title text-center">Mon Panier</h1>

		{% if cartItems is empty %}
			<p class="empty-cart text-center">Votre panier est vide.</p>
			<div class="cart-buttons">
				<a href="{{ path('product_index') }}" class="btn-primary">
					Continuer mes achats
				</a>
			</div>
		{% else %}
			<div class="orders-table-wrapper">
				<table class="orders-table">
					<thead>
						<tr>
							<th>Produit</th>
							<th>Quantité</th>
							<th>Prix unitaire</th>
							<th>Réduction</th>
							<th>Sous-total</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for item in cartItems %}
							{% if item.product.isWeightBased %}
								{% set prices    = item.product.getPriceByWeight() %}
								{% set unitPrice = prices[item.quantity] ?? item.product.getPrice() %}
								{% set base1g    = prices['1'] ?? item.product.getPrice() %}
								{% set baseTotal = base1g * item.quantity %}
								{% set finalTotal= unitPrice * item.quantity %}
								{% set discount  = baseTotal - finalTotal %}
							{% endif %}
							<tr>
								<td>{{ item.product.name }}</td>
								<td>
									{% if item.product.isWeightBased %}
										{{ item.quantity }}
										g
									{% else %}
										{{ item.quantity }}
									{% endif %}
								</td>
								<td>
									{% if item.product.isWeightBased %}
										{{ unitPrice|number_format(2, ',', ' ') }}
										€/g
									{% else %}
										{{ item.price|number_format(2, ',', ' ') }}
										€
									{% endif %}
								</td>
								<td>
									{% if item.product.isWeightBased and discount > 0 %}
										-{{ discount|number_format(2, ',', ' ') }}
										€
									{% else %}
										&ndash;
									{% endif %}
								</td>
								<td>
									<strong>
										{% if item.product.isWeightBased %}
											{{ finalTotal|number_format(2, ',', ' ') }}
										{% else %}
											{{ (item.price * item.quantity)|number_format(2, ',', ' ') }}
										{% endif %}
										€
									</strong>
								</td>
								<td>
									<a href="{{ path('cart_remove', { id: item.product.id, weight: item.quantity }) }}" class="btn-delete">
										Supprimer
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>

			<div class="cart-summary">
				<h3>
					Total :
					<strong>{{ total|number_format(2, ',', ' ') }}
						€</strong>
				</h3>
			</div>

			<div class="cart-buttons">
				<a href="{{ path('cart_clear') }}" class="btn-empty">Vider le panier</a>
				<a href="{{ path('order_checkout') }}" class="btn-secondary">Commander</a>
			</div>
		{% endif %}
	</div>
{% endblock %}
