							</li>
							<li data-bp="1133">
								<a href="{{ path('app_register') }}">Inscription</a>
							</li>
						{% endif %}

						<li class="nav-more">
							<button aria-label="Plus de liens">â€¦Plus</button>
							<ul class="more-menu"></ul>
						</li>
					</ul>

					<button class="burger-menu" aria-label="Menu mobile">â˜°</button>
				</div>
			</nav>

			<aside id="mySidenav" class="sidenav" aria-hidden="true">
				<button class="closebtn" aria-label="Fermer le menu">&times;</button>
				>
				<a href="{{ path('home') }}">Accueil</a>
				<a href="{{ path('product_index') }}">Produits</a>
				<a href="{{ path('cart_index') }}">Panier</a>
				<a href="{{ path('order_index') }}">Commandes</a>
				<a href="{{ path('app_contact') }}">Contact</a>
				{% if app.user %}
					<a href="{{ path('user_index') }}">Mon compte</a>
					<a href="{{ path('app_logout') }}">DÃ©connexion</a>
				{% else %}
